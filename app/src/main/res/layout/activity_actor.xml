<?xml version="1.0" encoding="utf-8"?>
<!--Made the layout drawable-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_actor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.ActorActivity_Main">

    <TextView
        android:id="@+id/actorHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="@string/about_the_actor"
        android:textColor="#246EE9"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/actorImageV"
        android:layout_width="200dp"
        android:layout_height="170dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/actor_image"
        android:foregroundGravity="center_horizontal"
        android:src="@drawable/actor_unknown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actorHeader"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/actorNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:foregroundGravity="center_horizontal"
        android:gravity="center"
        android:hint="Actor Name"
        android:textColor="#246EE9"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actorImagetextView" />

    <TextView
        android:id="@+id/actorInfoTextV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="8dp"
        android:foregroundGravity="center_horizontal"
        android:gravity="fill_horizontal"
        android:hint="Actor Info"
        android:scrollbars="vertical"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actorNameTextView" />

    <TextView
        android:id="@+id/actorImagetextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Source: Wikipedia"
        android:textColor="#757575"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/actorImageV"
        app:layout_constraintTop_toBottomOf="@+id/actorImageV" />


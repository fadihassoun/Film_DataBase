<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editFilm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditFilmActivity">

    <TextView
        android:id="@+id/editFilmHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginLeft="158dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="143dp"
        android:layout_marginRight="143dp"
        android:text="Edit a film entry"
        android:textColor="#246EE9"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/edit_titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:text="Title:"
        android:textColor="#246EE9"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editFilmHeader" />

    <TextView
        android:id="@+id/edit_yearTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:text="Year:"
        android:textColor="#246EE9"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_titleEditText" />

    <TextView
        android:id="@+id/edit_genreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:text="Genre:"
        android:textColor="#246EE9"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_yearEditText" />

    <TextView
        android:id="@+id/edit_lengthTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:text="Length:"
        android:textColor="#246EE9"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_genreSpinner" />

    <TextView
        android:id="@+id/edit_minutesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="12dp"
        android:text="min."
        app:layout_constraintBottom_toBottomOf="@+id/edit_lengthEditText"
        app:layout_constraintStart_toEndOf="@+id/edit_lengthEditText" />

    <TextView
        android:id="@+id/edit_chracterTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:text="Character Name:"
        android:textColor="#246EE9"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_lengthEditText" />

    <TextView
        android:id="@+id/edit_scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="16dp"
        android:text="My Score:"
        android:textColor="#246EE9"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/edit_watchedCheckBox"
        app:layout_constraintTop_toBottomOf="@+id/edit_characterEditTxtView" />

    <EditText
        android:id="@+id/edit_titleEditText"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/round_edit_text"
        android:ems="10"
        android:hint="Film title"
        android:inputType="text"
        android:maxLength="200"
        android:minHeight="48dp"
        android:padding="5dp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_titleTextView" />

    <EditText
        android:id="@+id/edit_yearEditText"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/round_edit_text"
        android:ems="10"
        android:hint="Year"
        android:inputType="number"
        android:maxLength="4"
        android:minHeight="48dp"
        android:text=""
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_yearTextView" />

    <EditText
        android:id="@+id/edit_lengthEditText"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/round_edit_text"
        android:ems="10"
        android:hint="Film length"
        android:inputType="number"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_lengthTextView" />

    <EditText
        android:id="@+id/edit_characterEditTxtView"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/round_edit_text"
        android:ems="10"
        android:hint="Character"
        android:inputType="textPersonName"
        android:maxLength="200"
        android:minHeight="48dp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_chracterTextView" />

    <Spinner
        android:id="@+id/edit_genreSpinner"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:contentDescription="genre"
        android:entries="@array/genreList"
        android:spinnerMode="dropdown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_genreTextView" />

    <Spinner
        android:id="@+id/edit_scoreSpinner"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="95dp"
        android:layout_marginLeft="95dp"
        android:entries="@array/scoreList"
        android:contentDescription="score"
        android:isScrollContainer="true"
        app:layout_constraintStart_toEndOf="@+id/edit_watchedCheckBox"
        app:layout_constraintTop_toBottomOf="@+id/edit_scoreTextView" />

    <CheckBox
        android:id="@+id/edit_watchedCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="16dp"
        android:buttonTint="#246EE9"
        android:text="Watched"
        android:textColor="#246EE9"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_characterEditTxtView" />

    <Button
        android:id="@+id/edit_updateButton"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:hapticFeedbackEnabled="true"
        android:shadowColor="#FFFFFF"
        android:text="Update Film Entry"
        app:backgroundTint="#246EE9"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_scoreSpinner" />

    <Button
        android:id="@+id/edit_cancelButton"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:text="@android:string/cancel"
        app:backgroundTint="#5393FD"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_updateButton" />


</androidx.constraintlayout.widget.ConstraintLayout>